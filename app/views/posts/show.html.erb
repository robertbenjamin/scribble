<h2><%= @post.title %> <%= link_to "(edit)", edit_post_path(@post) %></h2>
<h3><%= @post.author %></h4>

<p><%= @post.text %></p>

<!-- Comments go HERE -->

<h3>Comments <a href="/comments/new">(+)</a></h3>

<ul>
  <% @post.comments.each do |comment| %>
    <li>
    <h4><%= link_to "#{comment.author}", comment %></h4>
    <p><%= @comment.text %></p>
    	
    </li>
  <% end %>
</ul>
